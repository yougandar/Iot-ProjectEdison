{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "iotDpsSettings":{
                "type": "object"
        },
        "iothubSettings":{
            "type": "object"
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[parameters('iotDpsSettings').iotDpsName]",
            "apiVersion": "2017-11-15",
            "location": "[parameters('iotDpsSettings').location]",
            "type": "Microsoft.Devices/provisioningServices",
            "sku": {
                "name": "S1",
                "tier": "Standard",
                "capacity": 1
            },
            "properties": {
                "iotHubs": [
                    {
                        "name": "[concat(parameters('iothubSettings').iotHubName,'.azure-devices.net')]",
                        "connectionString": "[concat('HostName=',parameters('iothubSettings').iotHubName,'.azure-devices.net;SharedAccessKeyName=',parameters('iothubSettings').keyName, ';SharedAccessKey=', listkeys(resourceId('Microsoft.Devices/IotHubs/IotHubKeys',parameters('iothubSettings').iotHubName,'iothubowner'),'2016-02-03').primaryKey)]",
                        "location": "[parameters('iothubSettings').location]"
                    }
                ]
            },
            "dependsOn": []
        }
    ],
    "outputs": {
        "iotDpsIdScope": {
            "value": "[reference(resourceId('Microsoft.Devices/ProvisioningServices',parameters('iotDpsSettings').iotDpsName)).idScope]",
            "type": "string"
        },
        "iotDpsPrimaryKey": {
            "value": "[listkeys(resourceId('Microsoft.Devices/ProvisioningServices/keys',parameters('iotDpsSettings').iotDpsName,'provisioningserviceowner'),'2017-08-21-preview').primaryKey]",
            "type": "string"
        }
    }
}
